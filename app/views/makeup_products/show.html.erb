<div class="box">
  <div class="card">
    <div class="card-content">
      <div class="media">
        <div class="media-content">
          <div class="content">
            <h1 class="title"><%= @makeup_product.product_name %></h1>
            <p><strong>Brand:</strong> <%= @makeup_product.brand.brand_name %></p>
            <p><strong>Category:</strong> <%= @makeup_product.product_category.product_type %></p>
            <p><strong>Price:</strong> <%= number_to_currency(@makeup_product.price, unit: "$") %></p>
            <p><strong>Description:</strong> <%= @makeup_product.description %></p>
          </div>
        </div>
        <div class="media-right">
          <figure class="image is-180x180">
            <%= image_tag @makeup_product.api_featured_image, class: "product-image" %>
          </figure>
        </div>
      </div>
    </div>
  </div>
</div>
